<h1>Listing Flashcards</h1><br/>


<script type='text/javascript'>
$(document).ready(function() {
  // get initial question and answer
  $.getJSON('/bundles/<%= @bundle.id %>/get_random_card.json', function(data) {
          $('div.question').html(data.question);
          $('div.answer').html(data.answer);
          
          // make answer div hidden again for new Q&A
          $('div.answer').hide();
      });

  // get next quetion and answer
  $('a.next_question').click(function () {
      $.getJSON('/bundles/<%= @bundle.id %>/get_random_card.json', function(data) {
          $('div.question').html(data.question);
          $('div.answer').html(data.answer);
          
          // make answer div hidden again for new Q&A
          $('div.answer').hide();
      });
      return false;
  });



  $('a.show_answer').click(function() {
    $('div.answer').show();
    return false;
  });


});
</script>


<div class="question_and_answer">
  <div class="question">
  </div>
  
  <div class="answer">
  </div>
<a href="" class="show_answer">Show Answer</a> | <a href="" class="next_question">Next Question</a>

</div>

