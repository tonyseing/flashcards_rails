<script type="text/javascript">
$(document).ready(function() {
    tinyMCE.init({
            mode : "textareas",
            theme : "simple",
            editor_selector : "question"
    });

    tinyMCE.init({
            mode : "textareas",
            theme : "advanced",
            editor_selector : "answer"
    });
});
</script>


<%= form_for([@bundle, @flashcard]) do |f| %>
  <% if @flashcard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flashcard.errors.count, "error") %> prohibited this flashcard from being saved:</h2>

      <ul>
      <% @flashcard.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :question %><br />
    <%= f.text_field :question, :class => 'question' %>
  </div>
  <div class="field">
    <%= f.label :answer %><br />
    <%= f.text_field :answer. :class => 'answer' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>