<h1>Listing flashcards</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th></th>
    <th></th>
  </tr>

<% @flashcards.each do |flashcard| %>
  <tr>
    <td><%= flashcard.question.html_safe %></td>
    <td><%= flashcard.answer.html_safe %></td>
    <td><%= link_to 'Edit', edit_bundle_flashcard_path(@bundle, flashcard), :class => 'btn btn-info' %></td>
    <td><%= link_to 'Delete', bundle_flashcard_path(@bundle, flashcard), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Flashcard', new_bundle_flashcard_path(@bundle), :class => 'btn .btn-large btn-primary' %>
